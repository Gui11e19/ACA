<!doctype html>
<%-include("../template/head") %> 
   <body>
    
    <div class="contProdutos">

        <div class="lateral">
            <aside class="col-sm">
                <div class="nav-item dropdown ">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Categorias
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
						<% for(var i=0;i< categories.length;i++) {%>
						<a class="dropdown-item" href="/productos/categoria/<%=categories[i].name%>"><%= categories[i].name %> </a>
						<% } %>
                    </div>
                </div>
                    </aside>
        </div>

        <div class="medio">
            <div class="container-fluid">
                <%if (plist.length > 0) {%>
                    <%for (let product of plist) {%>
                    
                    <div class="container mt-5 mb-5">
                    
                                <div class="row p-2 bg-white border rounded">
                            <div class="col-md-9">
                                    <div class=" imgCard col-md-3 mt-1"><img class="imgProd" src="https://climacaribe.com.co/wp-content/uploads/2017/02/comfortstar-minisplit-inverter-colombia.png"></div>
                            
                                    <div class="col">
                                        <a href=/product/modify/<%=product._id%>  >
                                        <h5  class="card-title mt-2"><%=product.name%></h5>
                                        
                                        <div class="d-flex flex-row">
                                            <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                                            </div><span class="price">$ <%=product.price%></span>
                                        </div>
                                    
                                    </div>

                                </div>
                            </div>
                        </div>
                    
                    
                    
                    <%}%>
                    <div class="container mt-4">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <% if (page.hasPreviousPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=1">First</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= page.previousPage %>"><%= page.previousPage %></a>
                                </li>
                                <% } %>
                                <li class="page-item active">
                                    <a class="page-link" href="?page=<%= page.currentPage %>"><%= page.currentPage %></a>
                                </li>
                                <% if (page.hasNextPage) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= page.nextPage %>"><%= page.nextPage %></a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= page.lastPage %>">Last</a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                <%} else {%>
                <div class="text-center">
                    <h5>No se encontraron Productos</h5>
                    <div class="mt-4">
                        <a href="/" class="btn btn-outline-primary">Go Home</a>
                    </div>
                </div>
                <%}%>
            
        </div> 
    </div>
</div> 


</body>


</html>
