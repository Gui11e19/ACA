<%-include("../template/head") %> 
<%-include("../template/navbar") %> 

  <body>

    
    <div class="container mt-5 mb-5">
  
    	<form action="/product/modify" method="post" accept-charset="utf-8"  enctype="multipart/form-data">


	    <input type="hidden" class="form-control" name="id" id="id" value="<%=product._id%>">
	  <div class="form-group">
		  <label for="name">Nombre del Producto<%=  %></label>
	    <input type="text" class="form-control" name="name" id="name" placeholder="Producto" value="<%=product.name%>">
		
		<% if( errormgs[0] && errormgs[0].name) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].name.msg %>
        	</small>      
		<% }%>


	  </div>
<div class="form-group">
    <label for="description">Descripcion del prodcuto</label>
    <textarea class="form-control" name="description" id="description" rows="3"><%=product.description%></textarea>
		<% if( errormgs[0] && errormgs[0].description) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].description.msg %>
        	</small>      
		<% }%>


  </div>
	  	<div class="form-group">
	    <label for="price">Precio del Producto</label>
	    <input type="number" min="0.01" step="0.01"  class="form-control" name="price" id="price" placeholder="0.00" value="<%=product.price%>">
			<small id="priceHelp" class="form-text text-muted">Precio en $USD</small>

		<% if( errormgs[0] && errormgs[0].price) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].price.msg %>
        	</small>      
			<% } %>

	  </div>
		<div class="form-group">
		<label for="categoryId">Categoria del Producto</label>
			<select class="form-control" name="categoryId" id="categoryId">


							<option value="" selected>Seleccione una Categoria</option>
				<% for (var i = 0; i < categories.length; /* I save the data in a variable 'quotation', I don't know how you named your variable ' */  i++) {

				%>
				

					<% if(categories[i]._id.equals(product.category_id)){
					%>
							<option value="<%= product.category_id%>" selected><%= categories[i].name %></option>

					<%} else {%>
					<option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
			   <%}%>
			   <% } %>
			</select>

		<% if( errormgs[0] && errormgs[0].category_id) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].category_id.msg %>
        	</small>      
			<% } %>
  	</div>
	
<div class="card">
        <div class="row">
            <aside class="col-sm-5 border-right">
                <div class="container">
    
                    <div id='el'></div>
            </div>
    

      <div class=" Prod"> <a href="#"><img class="prodIMG" src="<%= img_url%>">
      </a></div>
</div>
</div>
	<div class="form-group">
	

    <label for="img"> Nueva Imagen</label>
    <input type="file" name="img" class="form-control-file" id="img">
 	 </div> 

	  <button type="submit" class="btn btn-primary">Guardar</button>
	
	</form>

    <%-include("../template/footer") %> 

  </body>
  
</html>
