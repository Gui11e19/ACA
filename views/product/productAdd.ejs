<!DOCTYPE html>


<%-include("../template/head") %> 
<body>
<%-include("../template/navbar") %> 

   <div class="container-fluid">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
	<form action="/product/add" method="post" accept-charset="utf-8"  enctype="multipart/form-data">

	  <div class="form-group">
		  <label for="name">Nombre del Producto<%=  %></label>
	    <input type="text" class="form-control" name="name" id="name" placeholder="Producto">
		
		<% if( errormgs[0] && errormgs[0].name) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].name.msg %>
        	</small>      
		<% }%>


	  </div>
<div class="form-group">
    <label for="description">Descripcion del prodcuto</label>
    <textarea class="form-control" name="description" id="description" rows="3"></textarea>
		<% if( errormgs[0] && errormgs[0].description) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].description.msg %>
        	</small>      
		<% }%>


  </div>
	  	<div class="form-group">
	    <label for="price">Precio del Producto</label>
	    <input type="number" min="0.01" step="0.01"  class="form-control" name="price" id="price" placeholder="0.00">
			<small id="priceHelp" class="form-text text-muted">Precio en $USD</small>

		<% if( errormgs[0] && errormgs[0].price) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].price.msg %>
        	</small>      
			<% } %>

	  </div>
		<div class="form-group">
		<label for="categoryId">Categoria del Producto</label>
			<select class="form-control" name="categoryId" id="categoryId">
				<option value="" selected>Escoja una categoria</option>
				<% for (var i = 0; i < categories.length; /* I save the data in a variable 'quotation', I don't know how you named your variable ' */  i++) { %>
					<option value="<%= categories[i]._id %>"><%= categories[i].name %></option>
			   <% } %>
			</select>

		<% if( errormgs[0] && errormgs[0].category_id) { %>
			 <small id="passwordHelp" class="text-danger">
				 <%=errormgs[0].category_id.msg %>
        	</small>      
			<% } %>
  	</div>
	
	<div class="form-group">
    <label for="img">Example file input</label>
    <input type="file" name="img" class="form-control-file" id="img">
 	 </div> 

	  <button type="submit" class="btn btn-primary">Guardar</button>
	
	</form>
	</div>


   <%-include("../template/footer") %> 


</body>
